<p class="text-green-600 mb-4 justify-center"><%= notice %></p>

<% content_for :title, "Authors" %>

<h1 class="text-3xl font-bold mb-6">Authors</h1>

<div id="authors" class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <% @authors.each do |author| %>
    <div class="bg-white rounded shadow p-6">
      <%= render author %>
      <p class="text-gray-600">
        <strong class="font-semibold">ID:</strong> <%= author.id %>
      </p>
      <div class="mt-4 flex gap-4">
        <%= link_to "Show this author", author, class: "text-blue-600 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <%= link_to "New author", new_author_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>