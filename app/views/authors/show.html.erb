<p class="text-green-600 mb-4"><%= notice %></p>

<div class="bg-white rounded shadow p-6 max-w-xl mx-auto">
  <%= render @author %>
  <p class="text-gray-600 mt-2">
    <strong class="font-semibold">ID:</strong> <%= @author.id %>
  </p>
  <div class="mt-6 flex gap-4">
    <%= link_to "Edit this author", edit_author_path(@author), class: "text-blue-600 hover:underline" %>
    <%= link_to "Back to authors", authors_path, class: "text-gray-600 hover:underline" %>
    <%= button_to "Destroy this author",
          author_path(@author),
          method: :delete,
          data: { confirm: "Are you sure?" },
          class: "text-red-600 hover:underline" %>
  </div>
</div>