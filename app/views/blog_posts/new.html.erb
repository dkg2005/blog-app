<% content_for :title, "New blog post" %>

<h1 class="text-3xl font-bold mb-6 text-center">New blog post</h1>

<div class="bg-white rounded-xl shadow-lg p-8 max-w-xl mx-auto">
  <%= render "form", blog_post: @blog_post %>
</div>

<div class="mt-8 flex justify-center">
  <%= link_to "Back to blog posts", blog_posts_path, class: "inline-block px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition" %>
</div>